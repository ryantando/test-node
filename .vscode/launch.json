  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "api",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "node",
        "-r",
        "./env/config",
        "-e",
        "require('./.build/index').api.listen(8080)"
      ]
    }
  ]
}
